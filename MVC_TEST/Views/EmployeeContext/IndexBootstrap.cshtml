@model IEnumerable<MVC_TEST.Models.Employee>
@{
    ViewBag.Title = "IndexBootstrap";
}
@section topCSS{
    <style>
        th {
            text-align: center;
            color: #fff;
            background-color: #343a40;
        }

        td:last-child {
            text-align: center;
        }
    </style>
}
<div class="row">
    <div class="col-sm-2 col-md-4 col-lg-6 col-xl-12">
        <div class="jumbotron alert-success">
            <h2>員工基本資料</h2>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("新增員工資料", "Create", null, new { @class = "btn btn-warning" })
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                <div class="glyphicon glyphicon-th-list"></div>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                <div class="glyphicon glyphicon-user"></div>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <div class="glyphicon glyphicon-phone"></div>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                <div class="glyphicon glyphicon-envelope"></div>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <div class="glyphicon glyphicon-home"></div>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                <div class="glyphicon glyphicon-king"></div>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("明細", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("刪除", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @{ var word = @"子曰: ""三人行，必有我師焉"""; }
    @word
</p>

@{ var msg = @"<button type='button' onclick='alert(""Hi MVC"")'>Raw 原始字串，不做 HTML 編碼</button>"; }
<p>@msg</p>
<p>@Html.Raw(msg)</p>
@("<span>Hello MVC!</span>") <br />

@section scripts{
    <script type="text/javascript">
        function showName(name) {
            alert("Your Name is " + name);
        }
    </script>
}
